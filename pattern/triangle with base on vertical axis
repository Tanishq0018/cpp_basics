//using two different loops for printing a triangle whose base is lying on vertical axis
#include <iostream>
using namespace std;

int main() {
    int i,j,row=5;
    for(i=1;i<=row;i++){
        for(j=1;j<=i;j++){
            cout<<"*";
            
        }
        cout<<"\n";
        
    }
    for(i=row-1;i>=1;i--){
        for(j=1;j<=i;j++){
            cout<<"*";
            
        }
        cout<<"\n";
        }
    
   
    return 0;
}
