//using nesting looping to print full triangle 
#include <iostream>
using namespace std;

int main() {
    int i,j,k,l,row=5;
    for(i=1;i<=row;i++){
        for(k=1;k<=row-i;k++){
            cout<<" ";
        }
        for(j=1;j<=i;j++){
            cout<<"*";
            
        }
        for(l=i-1;l>=1;l--){
            cout<<"*";
        }
        cout<<"\n";
        
    }
    
   
    return 0;
}
