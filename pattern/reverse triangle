#include <iostream>
using namespace std;

int main() {
    int n;
    cout<<"enter the no. of times u wnat pattern\n";
    cin>>n;
    int i=1;
    while(i<=n){
       int  j=1;
        while(j<=n-i){
            cout<<" ";
            j++;
        }
        while(j<=n){
            cout<<"*";
            j++;
        }
        cout<<"\n";
        i++;
    }
    return 0;
}
